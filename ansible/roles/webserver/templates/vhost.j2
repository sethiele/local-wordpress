<VirtualHost *:80>
	ServerAdmin admin@server
	ServerName {{item}}.local
	
	DocumentRoot /var/www/{{item}}.local
	<Directory />
		Options FollowSymLinks
		AllowOverride All
	</Directory>
	<Directory /var/www/{{item}}.local>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>
</VirtualHost>